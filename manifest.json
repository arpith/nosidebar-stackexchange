{
  "manifest_version": 2,
  "name": "NoSidebar StackExchange",
  "version": "1.0",
  "description": "Hides Hot Network Questions sidebar on StackExchange websites",
  "page_action": {
    "default_icon": "tangled_cat_64.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
      {
        "matches": [
          "*://*.stackexchange.com/*",
          "*://stackoverflow.com/*",
          "*://serverfault.com/*",
          "*://superuser.com/*",
          "*://askubuntu.com/*",
          "*://mathoverflow.net/*",
          "*://stackapps.com/*"
        ],
        "js": ["content.js"]
      }
  ],
  "icons": {
      "64": "tangled_cat_64.png",
      "128": "tangled_cat_128.png",
      "256": "tangled_cat_256.png"
  }
}
