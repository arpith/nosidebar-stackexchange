{
  "manifest_version": 2,
  "name": "NoSidebar StackExchange",
  "version": "0.1",
  "description": "Hides Hot Network Questions sidebar on StackExchange websites",
  "page_action": {
    "default_icon": "cat_tied.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
  {
    "matches": [
      "*://*.stackexchange.com/*",
      "*://stackoverflow.com/*",
      "*://serverfault.com/*",
      "*://superuser.com/*",
      "*://askubuntu.com/*",
      "*://mathoverflow.net/*",
      "*://stackapps.com/*"
    ],
    "js": ["content.js"]
  }
  ]
}
